---
// Importamos tailwind
import "../styles/global.css";

// Interfaces para titulos
interface Props {
  title?: string;
  iconSitio?: string;
}

const { title, iconSitio = "../../public/Logos/moto-1.svg" } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href={iconSitio} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="font-montserrat">
    <slot />
  </body>
</html>
