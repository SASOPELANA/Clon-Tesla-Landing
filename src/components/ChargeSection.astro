---
import Section from "./Section.astro";
import Imagen1 from "../../public/Img/fz-250.webp";
import ImgagenMovil from "../../public/Img/fz-250-moviles.webp";
---

<Section
  title="Model FZ 250"
  subtitle="Concertar una prueba de conducciÃ³n"
  color="white"
  id="fz-250"
>
  <div slot="footer" class="gap-x-6 flex mx-auto max-md:gap-x-2 max-md:p-2">
    <a
      class="border-[3px] border-white/50 bg-gray-600 text-sm rounded font-medium text-white px-12 py-2 inline-block transition-colors hover:border-gray-400 hover:bg-gray-400 max-md:px-4"
      href="#fz-250"
    >
      Explorar inventario</a
    >
    <a
      class="border-[3px] border-white/80 bg-white/70 text-sm rounded font-medium px-12 py-2 transition-colors hover:bg-black hover:text-white inline-flex justify-center items-center text-black hover:border-black max-md:px-4"
      href="#"
    >
      Pedido personalizado</a
    >
  </div>

  <img
    slot="background"
    alt="Model FZ 250"
    class="h-full w-full object-cover object-center bg-image hidden md:block"
    src={Imagen1.src}
    id="bg-image-fz-250"
  />
  <img
    slot="background"
    alt="Model FZ 250"
    class="h-full w-full object-cover object-center bg-image block md:hidden"
    src={ImgagenMovil.src}
    id="bg-image-fz-250-mobile"
  />
</Section>
