---
import Section from "./Section.astro";
import imgBenelli from "../../public/Img/benelli-trk-702.webp";
import imgBenlliMovil from "../../public/Img/benelli-trk-702-movile.webp";
---

<Section
  title="Modelo Benelli TRK 702"
  subtitle="Concertar una prueba de conducciÃ³n"
  color="black"
  id="benelli-2025"
>
  <div slot="footer" class="gap-x-6 flex mx-auto max-md:gap-x-2 max-md:p-2">
    <a
      class="border-[3px] border-white/50 bg-gray-600 text-sm rounded font-medium text-white px-12 py-2 inline-block transition-colors hover:border-gray-400 hover:bg-gray-400 max-md:px-4"
      href="#benelli-2025"
    >
      Explorar inventario</a
    >
    <a
      class="border-[3px] border-white/80 bg-white/70 text-sm rounded font-medium px-12 py-2 inline-block transition-colors hover:bg-black hover:text-white justify-center items-center text-black hover:border-black max-md:px-4"
      href="#"
    >
      Pedido personalizado</a
    >
  </div>

  <img
    slot="background"
    alt="Modelo Benelli TRK 702"
    class="h-full w-full object-cover object-center bg-image hidden md:block"
    src={imgBenelli.src}
    id="bg-image-benelli"
  />
  <img
    slot="background"
    alt="Modelo Benelli TRK 702"
    class="h-full w-full object-cover object-center bg-image block md:hidden"
    src={imgBenlliMovil.src}
    id="bg-image-benelli-mobile"
  />
</Section>
