---
import Section from "../components/Section.astro";
import Accessorios from "../../public/Img/casco.webp";
import AccesoriosMovil from "../../public/Img/casco-moviles.webp";
---

<Section
  class="bg-black"
  title="Accesorios"
  subtitle="Accesorios para su Moto"
  color="black"
  id="accesorios"
  showFooterContent="true"
>
  <div slot="footer">
    <a
      class="text-black text-sm border-[3px] border-gray-400 bg-white/50 backdrop-blur-sm rounded font-medium px-12 py-2 inline-block
                hover:bg-gray-300 hover:text-black transition-colors"
      href="#accesorios">Conosca los accesorios</a
    >
  </div>

  <img
    slot="background"
    alt="Accessorios"
    class="h-full w-full object-cover object-center bg-image hidden md:block"
    src={Accessorios.src}
    id="bg-image-accesorios"
  />
  <img
    slot="background"
    alt="Accessorios"
    class="h-full w-full object-cover object-center bg-image block md:hidden"
    src={AccesoriosMovil.src}
    id="bg-image-accesorios-mobile"
  />
</Section>
